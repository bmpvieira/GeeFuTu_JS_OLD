<% include ../head %>

<div class="container pt">

    <h2>Experiments</h2>

    <a href="/experiments/new" class="btn btn-default mt">Add Experiment</a>

    <% if (experiments.length) { %>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Genome</th>

        </tr>
        </thead>
        <tbody>
        <% experiments.forEach(function(experiment){ %>
        <tr>
            <td><a href="/experiments/<%- experiment._id%>"><%- experiment.name %></a></td>
            <td><%- experiment.description %></td>
            <td><%- experiment.genome %></td>
        </tr>
        <% });%>
        </tbody>
    </table>
    <% } %>
</div>

<% include ../foot %>