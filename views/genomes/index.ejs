<% include ../head %>

<div class="container pt pb">

    <h2>Genomes</h2>

    <a href="/genomes/add" class="btn btn-default mt mb">Add Genome</a>

    <% if (genomes.length) { %>
    <table class="table">
        <thead>
        <tr>
            <th>Build version</th>
            <th>Description</th>

        </tr>
        </thead>
        <tbody>
        <% genomes.forEach(function(genome){ %>
        <tr>
            <td><a href="<%- user.username %>/<%- organism.localName %>/<%- genome.name %>"><%- genome.name %></a></td>
            <td><%- genome.description %></td>
        </tr>
        <% }); %>
        </tbody>
    </table>
    <% } %>
</div>

<% include ../foot %>