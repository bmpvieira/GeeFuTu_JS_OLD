<% include ../head %>

<div class="container pt">

    <h2>Add Genome </h2>

    <form role="form" action="/organisms/add" method="post">

        <div class="form-group">
            <label for="organism">Organism</label>
            <select class="form-control" id="organism" name="organism">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Enter Description" required>
        </div>
        <div class="form-group">
            <label for="buildVersion">Genus</label>
            <input type="text" class="form-control" id="buildVersion" name="buildVersion" placeholder="Enter Build Version" required>
        </div>
        <div class="form-group">
            <label for="file">File</label>
            <input type="file" id="file" name="file">
        </div>
        <div class="form-group">
            <label for="meta">Meta</label>
            <input type="text" class="form-control" id="meta" name="meta" placeholder="Enter Meta" required>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>

<% include ../foot %>
