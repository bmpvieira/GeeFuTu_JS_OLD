<% include ../head %>

<div class="container pt pb">

    <h2>Add Genome</h2>

    <form role="form" action="/genomes/add" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="organism">Organism</label>
            <select class="form-control" id="organism" name="organism">
                <% organisms.forEach(function(org){ %>
                <option value="<%- org._id %>"><%-org.localName%></option>
                <% }); %>
            </select>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="description" placeholder="Enter Description"
                   required>
        </div>
        <div class="form-group">
            <label for="buildVersion">Build Version</label>
            <input type="text" class="form-control" id="buildVersion" name="buildVersion"
                   placeholder="Enter Build Version" required>
        </div>
        <div class="form-group">
            <label for="file">File</label>
            <input type="file" id="file" name="file">
        </div>
        <div class="form-group">
            <label for="meta">Meta</label>
            <input type="text" class="form-control" id="meta" name="meta" placeholder="Enter Meta" required>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>

<% include ../foot %>
