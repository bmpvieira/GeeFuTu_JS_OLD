<% include ../head %>

<div class="container pt">

    <a href="/organisms/new" class="btn btn-default mt">Add Organism</a>

    <% if (organisms.length) { %>
    <table class="table">
        <thead>
        <tr>
            <th>Genus</th>
            <th>Species</th>
            <th>Strain</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% organisms.forEach(function(organism){ %>
        <tr>
            <td><%- organism.genus %></td>
            <td><%- organism.species %></td>
            <td><%- organism.strain %></td>
            <td><a href="#" class="btn btn-xs btn-info">Edit</a> <a href="#" class="btn btn-xs btn-danger">Delete</a></td>
        </tr>
        <% }) %>
        </tbody>
    </table>
    <% } %>
</div>

<% include ../foot %>